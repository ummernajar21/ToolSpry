# ToolSpry Security & Performance Headers
# Version: Pre-Ad Approval
# Last Updated: January 5, 2026

# Apply to all pages
/*
  # Security Headers
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin

  # Permissions Policy (restrict unnecessary features)
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=()

  # Content Security Policy - STRICT (No external ads yet)
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self';

  # Cache Control
  Cache-Control: public, max-age=3600, must-revalidate

# Cache static assets longer
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Don't cache HTML
/*.html
  Cache-Control: public, max-age=0, must-revalidate








